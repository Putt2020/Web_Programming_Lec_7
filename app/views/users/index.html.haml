%h1 Listing users

%table#userTable.display{:style => "width:100%"}
  %thead
    %tr
      %th Email
      %th Name
      %th Show
      %th Edit
      %th Delete

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.name
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New User', new_user_path

:javascript
  console.log($('#userTable'));
  $(document).ready(function() {
    $('#userTable').DataTable( {
        "scrollY":        "50vh",
        "scrollCollapse": true,
        "paging":         false
    } );
  });






