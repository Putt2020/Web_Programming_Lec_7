-# frozen_string_literal: true
/= simple_form_for :user, url: "/register",method: :post do |f|
= simple_form_for @user, url: "/register" do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?
  %p#notice.text-danger= notice

  .form-inputs
    .row
      .col-sm-12.col-md-8.col-lg-6.col-xl-5
        = f.input :email
    .row
      .col-sm-12.col-md-8.col-lg-6.col-xl-5.mt-2
        = f.input :name
    .row
      .col-sm-12.col-md-8.col-lg-6.col-xl-5.mt-2
        = f.input :password
    .row
      .col-sm-12.col-md-8.col-lg-6.col-xl-5.mt-2
        = f.input :password_confirm

  .row
    .col-md-3.col-xl-2.mt-2  
      .form-actions
        = f.button :submit, 'Create Account', class:"btn btn-primary mt-2"
    .col-md-3.col-xl-2.mt-2
      = link_to 'Cancel', '/main', class:"btn btn-primary mt-2"

